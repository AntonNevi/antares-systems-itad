const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300 pt-12 pb-8 border-t border-slate-800">
  <div class="container mx-auto px-6 grid md:grid-cols-4 gap-12 mb-12">
    <div class="space-y-4">
      <p class="text-sm text-slate-400 leading-relaxed">
        London-based ITAD provider delivering compliant asset disposal, secure data destruction, and international remarketing.
      </p>
    </div>

    <!-- Quick Links -->
    <div>
      <h3 class="text-white font-semibold mb-4 uppercase tracking-wider text-sm">Services</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/services#data-destruction" class="hover:text-primary transition-colors">Data Destruction</a></li>
        <li><a href="/services#it-buyback" class="hover:text-primary transition-colors">IT Asset Buyback</a></li>
        <li><a href="/services#recycling" class="hover:text-primary transition-colors">Sustainable Recycling</a></li>
        <li><a href="/services#export" class="hover:text-primary transition-colors">Export & Remarketing</a></li>
      </ul>
    </div>

    <!-- Compliance -->
    <div>
      <h3 class="text-white font-semibold mb-4 uppercase tracking-wider text-sm">Compliance</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/compliance" class="hover:text-primary transition-colors">Compliance Overview</a></li>
        <li><span class="text-slate-500 block">ICO Reg: C18880232</span></li>
        <li><span class="text-slate-500 block">NIST 800-88 Standards</span></li>
      </ul>
    </div>

    <!-- Contact -->
    <div>
      <h3 class="text-white font-semibold mb-4 uppercase tracking-wider text-sm">Contact</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/contacts" class="hover:text-primary transition-colors">Contact Us</a></li>
        <li><a href="mailto:info@antaressystems.net" class="hover:text-primary transition-colors">info@antaressystems.net</a></li>
        <li class="text-slate-500">London, United Kingdom</li>
      </ul>
    </div>
  </div>

  <div class="container mx-auto px-6 pt-8 border-t border-slate-800 text-xs text-slate-500 flex flex-col md:flex-row justify-between items-center gap-4">
    <p>&copy; {currentYear} Antares Systems Ltd. All rights reserved. Registered in England & Wales.</p>
    <div class="flex gap-6">
      <a href="/privacy-policy" class="hover:text-white">Privacy Policy</a>
      <a href="/terms-of-service" class="hover:text-white">Terms of Service</a>
    </div>
  </div>
</footer>

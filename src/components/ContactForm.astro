---
// Formspree endpoint specific to Antares Systems
const FORMSPREE_ENDPOINT = "https://formspree.io/f/xbjnqyjv"; // Using placeholder ID, user should replace
---

<div class="w-full mx-auto bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
  <h3 class="text-2xl font-bold text-slate-900 mb-2">Get a Quote</h3>
  <p class="text-slate-500 mb-6 text-sm">Fast, secure, and compliant. We typically respond within 1 hour during business hours.</p>
  
  <form
    action={FORMSPREE_ENDPOINT}
    method="POST"
    id="contact-form"
    hx-post={FORMSPREE_ENDPOINT}
    hx-trigger="submit"
    hx-target="#form-response"
    hx-swap="innerHTML"
    class="space-y-4"
  >
    <!-- Hidden fields for Formspree integration -->
    <input type="hidden" name="access_key" value="8c5cf6d6-0684-4a43-8251-d385f1895dd5" />
    <input type="hidden" name="subject" value="New Inquiry from Antares Systems Website" />
    <input type="text" name="botcheck" style="display: none;" aria-hidden="true" />
    <div class="grid md:grid-cols-2 gap-4">
      <div>
        <label for="name" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Full Name *</label>
        <input type="text" id="name" name="name" required class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all" />
      </div>
      <div>
        <label for="organisation" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Organisation *</label>
        <input type="text" id="organisation" name="organisation" required class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all" />
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-4">
       <div>
          <label for="email" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Email Address *</label>
          <input type="email" id="email" name="email" required class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all" />
       </div>
       <div>
          <label for="phone" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Telephone</label>
          <input type="tel" id="phone" name="phone" class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all" />
       </div>
    </div>

    <div>
      <label for="service" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Service Requirement *</label>
      <select id="service" name="service" required class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all appearance-none cursor-pointer">
        <option value="" disabled selected>Select a Service...</option>
        <option value="Data Destruction">Data Destruction</option>
        <option value="Asset Buyback">Asset Buyback</option>
        <option value="Recycling">Recycling</option>
        <option value="Export">Export</option>
        <option value="General Consultation">General Consultation</option>
      </select>
    </div>

    <div>
      <label for="project_details" class="block text-xs font-semibold text-slate-700 uppercase mb-1">Project Details *</label>
      <textarea id="project_details" name="project_details" rows="4" placeholder="Equipment type, quantity, timeframe, location..." required class="w-full px-4 py-2 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition-all resize-none"></textarea>
    </div>

    <button type="submit" class="w-full btn-primary mt-4 flex justify-center items-center gap-2 group py-3 rounded-lg font-bold text-white shadow-lg hover:shadow-xl transition-all">
      <span>Submit Inquiry</span>
      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
      <div class="htmx-indicator hidden ml-2 animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent"></div>
    </button>
  </form>

  <div id="form-response" class="mt-4 text-center text-sm text-slate-600"></div>
</div>

<style>
  .htmx-request .htmx-indicator {
    display: block;
  }
  .htmx-request.btn-primary span, 
  .htmx-request.btn-primary svg {
    display: none;
  }
</style>

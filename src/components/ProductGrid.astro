---
const { products } = Astro.props;
---

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
  {products.map(product => (
    <div class="group bg-white rounded-xl overflow-hidden border border-slate-200 shadow-sm hover:shadow-xl transition-all duration-300">
      <div class="aspect-video bg-slate-100 relative overflow-hidden flex items-center justify-center">
        <!-- Placeholder for product image -->
        <span class="text-4xl text-slate-300 group-hover:scale-110 transition-transform">{product.icon || 'ðŸ“¦'}</span>
        <div class="absolute top-2 right-2 bg-success-eco text-white text-xs font-bold px-2 py-1 rounded shadow-sm">
          IN STOCK
        </div>
      </div>
      
      <div class="p-6">
        <h3 class="text-lg font-bold text-slate-900 mb-2 truncate">{product.title}</h3>
        <p class="text-sm text-slate-500 mb-4 line-clamp-2">{product.desc}</p>
        
        <div class="flex items-center justify-between mt-auto pt-4 border-t border-slate-100">
          <span class="text-xs font-medium text-slate-400">Refurbished Grade A</span>
          <a href="/contact?product={product.slug}" class="text-sm font-semibold text-primary group-hover:underline">
            Request Stock List
          </a>
        </div>
      </div>
    </div>
  ))}
</div>

---
const links = [
  { text: 'Services', href: '/services' },
  { text: 'Products', href: '/products' },
  { text: 'Compliance', href: '/compliance' },
  { text: 'About', href: '/about' },
];
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-slate-100 shadow-sm transition-all duration-300" id="main-header">
  <div class="container mx-auto px-6 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3 group">
      <img src="/logo_antares.png" alt="Antares Systems Logo" class="h-10 w-auto transition-transform group-hover:scale-105" />
      <span class="font-bold text-xl tracking-tight text-slate-900 hidden md:block">
        Antares <span class="text-primary">Systems</span>
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8">
      {links.map(link => (
        <a href={link.href} class="text-sm font-medium text-slate-600 hover:text-primary transition-colors relative after:content-[''] after:absolute after:w-full after:scale-x-0 after:h-0.5 after:bottom-0 after:left-0 after:bg-primary after:origin-bottom-right after:transition-transform after:duration-300 hover:after:scale-x-100 hover:after:origin-bottom-left">
          {link.text}
        </a>
      ))}
    </nav>

    <!-- CTAs -->
    <div class="hidden md:flex items-center gap-4">
      <a href="tel:+442071234567" class="text-sm font-semibold text-slate-500 hover:text-slate-800">
        +44 20 7123 4567
      </a>
      <a href="/contact" class="btn-primary">
        Get a Quote
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-btn" class="md:hidden text-slate-600 focus:outline-none p-2" aria-label="Toggle Menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden absolute top-20 left-0 w-full bg-white border-b border-slate-100 shadow-xl p-6 flex-col gap-4">
    {links.map(link => (
      <a href={link.href} class="text-lg font-medium text-slate-700 hover:text-primary py-2 border-b border-slate-50">
        {link.text}
      </a>
    ))}
    <a href="/contact" class="btn-primary w-full text-center mt-4">
      Get a Quote
    </a>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  if (btn && menu) {
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      menu.classList.toggle('flex');
    });
  }
</script>

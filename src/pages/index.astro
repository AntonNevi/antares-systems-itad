---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ServiceCard from '../components/ServiceCard.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import SEOSchema from '../components/SEOSchema.astro';
import TrustBar from '../components/TrustBar.astro';

const services = [
  {
    title: "Data Destruction",
    description: "Certified erasure with audit trails and certificates.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`,
    link: "/services#data-destruction"
  },
  {
    title: "IT Buyback",
    description: "Fair-market valuation with free UK-wide collection.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    link: "/services#it-buyback"
  },
  {
    title: "Sustainable Recycling",
    description: "Zero-landfill WEEE-compliant processing.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>`,
    link: "/services#recycling"
  }
];
---

<BaseLayout
  title="ITAD & Secure Data Destruction | Antares Systems, London"
  description="Antares Systems provides certified data erasure, certified IT asset disposal, and sustainable IT equipment buyback services for London businesses. NIST 800-88 and HMG IS5 compliant."
>
  <SEOSchema pageType="homepage" />
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="relative py-24 lg:py-32 bg-slate-900 border-b border-slate-800 overflow-hidden">
      <!-- Background Grid -->
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5 pointer-events-none"></div>
      
      <div class="container mx-auto px-6 relative z-10 text-center max-w-5xl">
         <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-slate-800/80 border border-slate-700 backdrop-blur-sm shadow-sm mb-8 animate-fade-in-up">
            <span class="w-2 h-2 bg-success-eco rounded-full animate-ping"></span>
            <span class="text-xs font-bold text-slate-300 uppercase tracking-widest">London's Trusted ITAD Partner</span>
          </div>

        <h1 class="text-4xl lg:text-6xl font-bold text-white leading-tight mb-8 animate-fade-in-up delay-100">
          Secure IT Asset Disposal & <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-blue-400">Data Erasure</span> in London
        </h1>
        
        <p class="text-xl text-slate-400 leading-relaxed font-light mb-12 max-w-3xl mx-auto animate-fade-in-up delay-200">
          Certified Data Destruction data wiping, certified IT recycling, and sustainable hardware buyback for UK businesses. Enterprise-grade security meets circular economy.
        </p>
        
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up delay-300">
        <a href="/services" class="px-8 py-4 rounded-lg border border-slate-600 text-slate-300 hover:text-white hover:border-slate-500 hover:bg-white/5 font-semibold transition-all flex items-center justify-center gap-2">
          Our Services
        </a>
      </div>
      </div>
    </section>

    <!-- Trust Indicators -->
    <section class="border-b border-slate-100 bg-white py-10 shadow-sm relative z-20">
      <div class="container mx-auto px-6">
        <TrustBar variant="default" />
        <div class="grid md:grid-cols-2 gap-8 text-center mt-8">
          <div class="px-4">
            <span class="block text-2xl mb-2" title="Fully Insured Professional Services">ðŸ“œ</span>
            <h3 class="font-bold text-slate-900 text-sm uppercase tracking-wide mb-1">Fully Insured</h3>
            <p class="text-slate-500 text-sm">Professional Indemnity & Public Liability</p>
          </div>
          <div class="px-4">
            <span class="block text-2xl mb-2" title="Microsoft MAR Licensed Refurbishment">ðŸ”§</span>
            <h3 class="font-bold text-slate-900 text-sm uppercase tracking-wide mb-1">MAR Programme License</h3>
            <p class="text-slate-500 text-sm">Microsoft Authorised Refurbisher</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Company Overview -->
    <section class="py-20 bg-slate-50">
      <div class="container mx-auto px-6 max-w-4xl text-center">
        <h2 class="text-3xl font-bold text-slate-900 mb-6">Company Overview</h2>
        <p class="text-xl text-slate-600 leading-relaxed">
          London-based ITAD provider delivering compliant asset disposal, secure data destruction, and international remarketing. We extend hardware lifecycle value while eliminating data risk.
        </p>
      </div>
    </section>
    
    <!-- Core Services -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-slate-900">Core Services</h2>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          {services.map(service => (
            <ServiceCard {...service} linkText="View Details" />
          ))}
        </div>
      </div>
    </section>

    <!-- International Operations -->
    <section class="py-20 bg-slate-900 text-white relative overflow-hidden">
      <!-- Decorator -->
      <div class="absolute right-0 top-0 bottom-0 w-1/3 bg-white/5 skew-x-12 transform translate-x-20"></div>

      <div class="container mx-auto px-6 relative z-10 flex flex-col md:flex-row items-center justify-between gap-12">
        <div class="max-w-2xl">
          <div class="flex items-center gap-3 mb-4 text-primary font-bold tracking-wide uppercase text-sm">
             <span class="w-8 h-0.5 bg-primary"></span>
             International Operations
          </div>
          <h2 class="text-4xl font-bold mb-6">Bulk Refurbished Equipment for Global Markets</h2>
<p class="text-slate-300 text-lg mb-8 leading-relaxed">
  UK-based ITAD provider exporting bulk refurbished enterprise equipment (HPE Proiant, Dell PowerEdge) to African and Asian markets. Full Basel & WEEE documentation with HM Revenue-ready income statements for international capex recovery projects.
</p>
          <a href="/services#export" class="btn-primary inline-flex items-center gap-2">
            Export Capabilities <span aria-hidden="true">&rarr;</span>
          </a>
        </div>
        <!-- Visual Block / Infographic style -->
        <div class="w-full max-w-md bg-slate-800 p-8 rounded-2xl border border-slate-700 shadow-2xl">
           <div class="flex items-center gap-4 mb-6 border-b border-slate-700 pb-4">
              <div class="w-12 h-12 bg-primary/20 rounded-full flex items-center justify-center text-primary">
                 <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              </div>
              <div>
                 <h3 class="font-bold text-white">Global Reach</h3>
                 <p class="text-xs text-slate-400">Export & Logistics</p>
              </div>
           </div>
           <ul class="space-y-4 text-sm text-slate-300">
              <li class="flex items-start gap-3">
                <span class="text-primary mt-0.5">âœ“</span>
                <div>
                  <strong class="text-white block">Asia and Middle East</strong>
                  <span class="text-xs text-slate-500">Dubai, India, Pakistan</span>
                </div>
              </li>
              <li class="flex items-start gap-3">
                <span class="text-primary mt-0.5">âœ“</span>
                <div>
                  <strong class="text-white block">Africa</strong>
                  <span class="text-xs text-slate-500">Nigeria, Ghana, Kenya</span>
                </div>
              </li>
              <li class="flex items-start gap-3">
                 <span class="text-primary mt-0.5">âœ“</span>
                 <div>
                    <strong class="text-white block">Full Compliance</strong>
                    <span class="text-xs text-slate-500">Customs documentation handled</span>
                 </div>
              </li>
           </ul>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

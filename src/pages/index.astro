---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import HeroSection from '../components/HeroSection.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TrustBar from '../components/TrustBar.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  {
    title: "Data Destruction",
    description: "NCSC-approved data wiping and physical shredding. Certified compliance with NIST 800-88 and HMG IS5 standards.",
    icon: "üîí",
    link: "/services/data-destruction"
  },
  {
    title: "IT Recycling",
    description: "Eco-friendly WEEE compliant recycling with a zero-landfill policy. Full sustainability reporting included.",
    icon: "‚ôªÔ∏è",
    link: "/services/it-recycling"
  },
  {
    title: "IT Asset Buyback",
    description: "Get maximum value for your redundant IT assets. We buy business-grade laptops, servers, and networking gear.",
    icon: "üí∞",
    link: "/services/buyback"

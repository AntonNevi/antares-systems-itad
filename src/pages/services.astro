---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEOSchema from '../components/SEOSchema.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

// Main hub service overview links to spoke pages
const serviceSections = [
  {
    id: "certified-erasure",
    title: "Certified Data Erasure",
    subtitle: "Military-grade data destruction with forensic verification. Full compliance with NIST 800-88 Rev. 1 guidelines for Media Sanitization. Complete audit trail and certificates.",
    content: "Forensic-grade security with certified data destruction. Full compliance with NIST 800-88 Rev. 1 guidelines for Media Sanitization. Complete audit trail and certificates.",
    icon: "üõ°Ô∏è",
    link: "/services/data-erasure",
    cta: "Learn More",
    features: ["Military-Grade Security", "NIST 800-88 Rev. 1", "Forensic Verification", "Complete Audit Trail", "Certificates Provided"]
  },
  {
    id: "itad-asset-recovery",
    title: "IT Asset Buyback",
    subtitle: "Maximum return on retired hardware. AI Server Clusters, Edge Computing Nodes, enterprise infrastructure. Fair-market valuation, secure collection, same-day payment.",
    content: "Maximum return on retired hardware with fair-market valuation. Secure collection and same-day payment for AI Server Clusters, Edge Computing Nodes, and enterprise infrastructure.",
    icon: "üíª",
    link: "/services/itad-asset-recovery",
    cta: "Learn More",
    features: ["AI Server Clusters", "Edge Computing Nodes", "Fair-Market Valuation", "Secure Collection", "Same-Day Payment"]
  },
  {
    id: "sustainable-disposal",
    title: "ESG & Sustainability",
    subtitle: "Carbon-negative disposal with full environmental reporting. Zero landfill, circular economy certified. Verified via internal carbon impact methodology.",
    content: "Carbon-negative disposal with full environmental reporting. Zero landfill commitment with circular economy certification. Verified via internal carbon impact methodology.",
    icon: "‚ôªÔ∏è",
    link: "/services/sustainable-disposal",
    cta: "Learn More",
    features: ["Carbon-Negative", "Zero Landfill", "Circular Economy", "Environmental Reporting", "Carbon Impact Verified"]
  },
  {
    id: "secure-logistics",
    title: "Secure Logistics",
    subtitle: "GPS-tracked, sealed transport nationwide. Chain-of-custody documentation from collection to processing.",
    content: "GPS-tracked, sealed transport with nationwide coverage. Complete chain-of-custody documentation from collection to processing.",
    icon: "üöö",
    link: "/services/secure-logistics",
    cta: "Learn More",
    features: ["GPS-Tracked", "Sealed Transport", "Nationwide", "Chain-of-Custody", "Documentation"]
  },
  {
    id: "onsite-services",
    title: "On-Site Services",
    subtitle: "Emergency response and witnessed destruction at your premises. 4-hour deployment available.",
    content: "Emergency response and witnessed destruction at your premises. 4-hour deployment available for urgent requirements.",
    icon: "üè¢",
    link: "/services/onsite-services",
    cta: "Learn More",
    features: ["Emergency Response", "Witnessed Destruction", "4-Hour Deployment", "Premises Services", "Immediate Certification"]
  }
];

---

<BaseLayout
  title="ITAD & Secure Data Destruction Services Hub | Antares Systems, London"
  description="Hub & Spoke ITAD services: certified data erasure (NIST 800-88), secure hardware buyback, WEEE-compliant recycling, and MAR-certified refurbishment. London-based ESG-focused asset disposition solutions for UK enterprises."
>
  <SEOSchema pageType="servicesHub" />
  <Header />
  <main class="bg-slate-50">
    <div class="bg-slate-900 py-12 md:py-16 text-center text-white border-b border-slate-800 min-h-[240px] sm:min-h-[260px] md:min-h-[280px] flex items-center">
      <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6">ITAD Cluster Services</h1>
        <p class="text-lg sm:text-xl text-slate-400">
          Strategic Hub & Spoke model for London enterprises. Tailored asset disposition solutions aligned to regulatory stringency, circular economy principles, and operational risk posture.
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 py-8 sm:py-12 mt-8 sm:mt-12 relative z-10 max-w-6xl">
      <div class="space-y-16 sm:space-y-24">
        {serviceSections.map((service, index) => (
          <section id={service.id} class={`flex flex-col md:flex-row gap-8 sm:gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
            <div class="flex-1 bg-white p-6 sm:p-8 rounded-2xl shadow-sm border border-slate-200 hover:shadow-md transition-shadow group w-full">
              <a href={service.link} class="block">
                <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center text-3xl mb-6 text-primary group-hover:bg-primary/20 transition-colors">
                  {service.icon}
                </div>
                <h2 class="text-3xl font-bold text-slate-900 mb-2 group-hover:text-primary transition-colors">{service.title}</h2>
                <h3 class="text-lg font-semibold text-primary mb-4">{service.subtitle}</h3>
                <p class="text-slate-600 leading-relaxed mb-8">
                  {service.content}
                </p>

                <div class="grid grid-cols-2 gap-4 mb-6">
                  {service.features.map(feature => (
                    <div class="flex items-center gap-2 text-sm font-medium text-slate-700">
                      <span class="w-1.5 h-1.5 bg-success-eco rounded-full"></span>
                      {feature}
                    </div>
                  ))}
                </div>

                <div class="text-right">
                  <span class="inline-block px-4 py-2 border border-primary text-primary rounded-lg group-hover:bg-primary group-hover:text-white transition-colors">
                    {service.cta} &rarr;
                  </span>
                </div>
              </a>
            </div>

            <!-- Image Block -->
            <div class="flex-1 w-full rounded-3xl overflow-hidden group hover:shadow-2xl shadow-xl transition-all duration-300">
              <div class="w-full h-full flex items-center justify-center transform transition-transform duration-700 group-hover:scale-105">
              <img
                src={service.id === "certified-erasure" ? "/Secure_data.png" :
                     service.id === "itad-asset-recovery" ? "/IT_asset.png" :
                     service.id === "sustainable-disposal" ? "/ESG.png" :
                     service.id === "secure-logistics" ? "/International.png" :
                     "/Onsite.png"}
                alt={service.id === "certified-erasure" ? "Certified Data Erasure and Secure IT Asset Disposal with NIST 800-88 compliance and forensic verification" :
                     service.id === "itad-asset-recovery" ? "IT Asset Buyback and Recovery for AI Servers, Edge Computing, and Enterprise Infrastructure" :
                     service.id === "sustainable-disposal" ? "ESG and Sustainable IT Disposal with Zero Landfill and Carbon-Negative Processing" :
                     service.id === "secure-logistics" ? "Secure Logistics and Chain-of-Custody Transport for IT Asset Disposition" :
                     "On-Site Services for Witnessed Data Destruction and Emergency IT Asset Disposal"}
                loading="lazy"
                decoding="async"
                class="w-full h-auto object-cover rounded-2xl"
              />
              </div>
            </div>
          </section>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
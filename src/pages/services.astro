---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEOSchema from '../components/SEOSchema.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

// Main hub service overview links to spoke pages
const serviceSections = [
  {
    id: "certified-erasure",
    title: "Certified Data Erasure",
    subtitle: "Secure hard drive destruction with forensic verification. Full compliance with NIST 800-88 Rev. 1 guidelines for media sanitization with on-site and off-site options for UK enterprises.",
    content: "Forensic-grade security with secure data destruction and certified data erasure. NIST 800-88 compliant media sanitization for servers, laptops, and enterprise storage devices across London, Manchester, Birmingham, and UK-wide.",
    icon: "üõ°Ô∏è",
    link: "/services/data-erasure",
    cta: "Learn More",
    features: ["Military-Grade Security", "NIST 800-88 Rev. 1", "Secure Media Sanitization", "Complete Audit Trail", "Certificate of Destruction"]
  },
  {
    id: "itad-asset-recovery",
    title: "IT Asset Buyback",
    subtitle: "Maximize recovery value for corporate IT assets. Coverage for London area businesses expanding to Manchester, Birmingham. Fair-market valuation, secure collection, same-day payment.",
    content: "Corporate IT buyback and bulk computer recycling programs. Fair market valuation for AI servers, GPU servers, HPC clusters, and edge computing nodes with UK-wide secure collection and same-day payment.",
    icon: "üíª",
    link: "/services/itad-asset-recovery",
    cta: "Learn More",
    features: ["GPU Server Resale", "Enterprise Hardware Buyback", "Bulk Computer Recycling", "HPC Cluster Disposal", "Same-Day Payment"]
  },
  {
    id: "sustainable-disposal",
    title: "ESG & Sustainability",
    subtitle: "Carbon-negative IT disposal with full environmental reporting. Zero landfill, circular economy certified ITAD solutions for UK enterprises and corporate sustainability initiatives.",
    content: "Carbon-negative IT disposal and WEEE-compliant computer recycling. Circular economy ITAD services with carbon footprint reporting, zero landfill commitment, and comprehensive ESG reporting for enterprise sustainability programs.",
    icon: "‚ôªÔ∏è",
    link: "/services/sustainable-disposal",
    cta: "Learn More",
    features: ["Carbon-Negative Disposal", "Zero Landfill IT Recycling", "ESG ITAD Solutions", "Carbon Footprint Reporting", "Circular Economy Certified"]
  },
  {
    id: "secure-logistics",
    title: "Secure Logistics",
    subtitle: "GPS-tracked, secure IT asset transport with international export capabilities. Refurbished laptop and server export from UK to Kazakhstan, Uzbekistan, CIS region, and Middle East.",
    content: "Secure ITAD logistics for bulk laptop export, used servers export, and international IT equipment shipping. Chain-of-custody documentation for export IT equipment to emerging markets with UK nationwide collection.",
    icon: "üöö",
    link: "/services/secure-logistics",
    cta: "Learn More",
    features: ["Bulk Laptop Export", "Used Servers Export", "International IT Shipping", "Export Documentation", "GPS-Tracked Transport"]
  },
  {
    id: "onsite-services",
    title: "On-Site Services",
    subtitle: "Emergency on-site data destruction with 4-hour deployment. Witnessed IT asset disposal, secure shredding, and bulk computer recycling at your London, Manchester, or Birmingham premises.",
    content: "On-site data destruction and emergency IT disposal services across the UK. 4-hour deployment for secure media sanitization, laptop disposal, and immediate IT asset destruction with certification and audit trail.",
    icon: "üè¢",
    link: "/services/onsite-services",
    cta: "Learn More",
    features: ["4-Hour Deployment", "Emergency Data Wiping", "Witnessed Destruction", "On-Site Server Disposal", "Immediate Certification"]
  }
];
---

<BaseLayout
  title="ITAD Services London | Secure Data Destruction & Certified IT Asset Disposal UK"
  description="Antares Systems provides comprehensive ITAD services in London, Manchester, and Birmingham. Certified data destruction, secure IT asset disposal, bulk computer recycling, WEEE-compliant IT recycling, and IT equipment buyback with NIST 800-88 compliance and GDPR-compliant data erasure across the UK."
>
  <SEOSchema pageType="servicesHub" />
  <Header />
  <main class="bg-slate-50">
    <div class="bg-slate-900 py-12 md:py-16 text-center text-white border-b border-slate-800 min-h-[240px] sm:min-h-[260px] md:min-h-[280px] flex items-center">
      <div class="container mx-auto px-4 sm:px-6 max-w-4xl">
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6">ITAD Cluster Services</h1>
        <p class="text-lg sm:text-xl text-slate-400">
          Secure ITAD services in London, Manchester, Birmingham with IT asset disposal, certified data erasure, WEEE-compliant IT recycling, and corporate IT buyback programs for regulated industries.
        </p>
      </div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 py-8 sm:py-12 mt-8 sm:mt-12 relative z-10 max-w-6xl">
      <div class="space-y-16 sm:space-y-24">
        {serviceSections.map((service, index) => (
          <section id={service.id} class={`flex flex-col md:flex-row gap-8 sm:gap-12 items-center ${index % 2 === 1 ? 'md:flex-row-reverse' : ''}`}>
            <div class="flex-1 bg-white p-6 sm:p-8 rounded-2xl shadow-sm border border-slate-200 hover:shadow-md transition-shadow group w-full">
              <a href={service.link} class="block">
                <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center text-3xl mb-6 text-primary group-hover:bg-primary/20 transition-colors">
                  {service.icon}
                </div>
                <h2 class="text-3xl font-bold text-slate-900 mb-2 group-hover:text-primary transition-colors">{service.title}</h2>
                <h3 class="text-lg font-semibold text-primary mb-4">{service.subtitle}</h3>
                <p class="text-slate-600 leading-relaxed mb-8">
                  {service.content}
                </p>

                <div class="grid grid-cols-2 gap-4 mb-6">
                  {service.features.map(feature => (
                    <div class="flex items-center gap-2 text-sm font-medium text-slate-700">
                      <span class="w-1.5 h-1.5 bg-success-eco rounded-full"></span>
                      {feature}
                    </div>
                  ))}
                </div>

                <div class="text-right">
                  <span class="inline-block px-4 py-2 border border-primary text-primary rounded-lg group-hover:bg-primary group-hover:text-white transition-colors">
                    {service.cta} &rarr;
                  </span>
                </div>
              </a>
            </div>

            <!-- Image Block -->
            <div class="flex-1 w-full rounded-3xl overflow-hidden group hover:shadow-2xl shadow-xl transition-all duration-300">
              <div class="w-full h-full flex items-center justify-center transform transition-transform duration-700 group-hover:scale-105">
              <img
                src={service.id === "certified-erasure" ? "/Secure_data.png" :
                     service.id === "itad-asset-recovery" ? "/IT_asset.png" :
                     service.id === "sustainable-disposal" ? "/ESG.png" :
                     service.id === "secure-logistics" ? "/International.png" :
                     "/Onsite.png"}
                alt={service.id === "certified-erasure" ? "Secure hard drive destruction and NIST 800-88 compliant data erasure services for IT asset disposal in London and across UK" :
                     service.id === "itad-asset-recovery" ? "IT asset buyback and bulk computer recycling program - Corporate IT valuation and enterprise equipment buyback with fair market pricing" :
                     service.id === "sustainable-disposal" ? "Carbon-negative IT disposal and ESG-focused WEEE-compliant computer recycling with zero landfill commitment and environmental reporting" :
                     service.id === "secure-logistics" ? "Secure ITAD logistics and international IT equipment export to Kazakhstan, Uzbekistan, Middle East and CIS region with chain-of-custody documentation" :
                     "On-site data destruction and emergency IT disposal services with 4-hour deployment for secure media sanitization and witnessed destruction at client premises"}
                loading="lazy"
                decoding="async"
                class="w-full h-auto object-cover rounded-2xl"
              />
              </div>
            </div>
          </section>
        ))}
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
---
import ContactForm from '../../components/ContactForm.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const category = {
  title: "Refurbished Business Laptops",
  description: "Enterprise-grade laptops from Dell, HP, and Lenovo. Fully tested, data-wiped, and warrantied.",
  items: [
    { title: "Dell Latitude Series", spec: "i5/i7, 16GB RAM, SSD" },
    { title: "HP EliteBook Series", spec: "i5/i7, 8GB/16GB RAM, SSD" },
    { title: "Lenovo ThinkPad T-Series", spec: "i5/i7, Durable Business Class" },
    { title: "Apple MacBook Pro", spec: "M1/M2 Chips, Retina Display" }
  ]
};
---

<BaseLayout 
  title="Refurbished Business Laptops & Notebooks" 
  description="Buy bulk refurbished business laptops in London. Dell Latitude, HP EliteBook, Lenovo ThinkPad. Grade A condition with warranty."
>
  <Header />
  <main class="py-12">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Products', href: '/products' }, { name: 'Laptops', href: '/products/laptops' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">{category.title}</h1>
          <p class="text-xl text-slate-600 mb-8">{category.description}</p>
          
          <div class="grid sm:grid-cols-2 gap-4 mb-12">
            {category.items.map(item => (
              <div class="p-4 border border-slate-200 rounded-lg hover:border-primary transition-colors bg-white shadow-sm">
                <h3 class="font-bold text-lg text-slate-800">{item.title}</h3>
                <p class="text-sm text-slate-500">{item.spec}</p>
              </div>
            ))}
          </div>
          
          <div class="bg-blue-50 p-6 rounded-xl border-l-4 border-primary">
            <h4 class="font-bold text-primary mb-2">B2B Wholesale Available</h4>
            <p class="text-sm text-blue-900">Looking for 10+ units? We offer volume discounts for schools and businesses.</p>
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
          <h3 class="text-2xl font-bold mb-2">Request Stock List</h3>
          <p class="text-slate-500 mb-6">Our inventory changes daily. Tell us what you need.</p>
          <ContactForm />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

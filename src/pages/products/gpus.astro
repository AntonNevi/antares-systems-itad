---
import ContactForm from '../../components/ContactForm.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const category = {
  title: "Graphics Cards & Components",
  description: "Enterprise and professional grade GPUs, processors, and server components.",
  items: [
    { title: "NVIDIA Quadro / RTX", spec: "Professional visualization GPUs" },
    { title: "Datacenter GPUs", spec: "Tesla V100/A100/H100 (when avail)" },
    { title: "Intel Xeon CPUs", spec: "Scalable Gold/Platinum Processors" },
    { title: "Server Memory", spec: "DDR4/DDR5 ECC Registered RAM" }
  ]
};
---

<BaseLayout 
  title="Refurbished GPUs & Server Parts" 
  description="Buy refurbished NVIDIA professional graphics cards, Intel Xeon processors, and server memory. High availability for legacy and modern systems."
>
  <Header />
  <main class="py-12">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Products', href: '/products' }, { name: 'GPUs & Parts', href: '/products/gpus' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">{category.title}</h1>
          <p class="text-xl text-slate-600 mb-8">{category.description}</p>
          
          <div class="grid sm:grid-cols-2 gap-4 mb-12">
            {category.items.map(item => (
              <div class="p-4 border border-slate-200 rounded-lg hover:border-primary transition-colors bg-white shadow-sm">
                <h3 class="font-bold text-lg text-slate-800">{item.title}</h3>
                <p class="text-sm text-slate-500">{item.spec}</p>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
          <h3 class="text-2xl font-bold mb-2">Component Sourcing</h3>
          <p class="text-slate-500 mb-6">Check stock for specific part numbers.</p>
          <ContactForm />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

---
import ContactForm from '../../components/ContactForm.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const category = {
  title: "Refurbished Enterprise Servers",
  description: "Cost-effective server infrastructure. Rackmount and blade servers from industry leaders.",
  items: [
    { title: "HPE ProLiant DL360/DL380", spec: "Gen9 / Gen10 Rack Servers" },
    { title: "Dell PowerEdge R640/R740", spec: "Scalable performance servers" },
    { title: "Cisco UCS Blades", spec: "High-density computing" },
    { title: "Storage Arrays", spec: "Dell EMC, NetApp, HPE Nimble" }
  ]
};
---

<BaseLayout 
  title="Refurbished Enterprise Servers & Storage" 
  description="Buy refurbished HPE ProLiant, Dell PowerEdge, and Cisco UCS servers. Tested and warrantied enterprise hardware in London."
>
  <Header />
  <main class="py-12">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Products', href: '/products' }, { name: 'Servers', href: '/products/servers' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">{category.title}</h1>
          <p class="text-xl text-slate-600 mb-8">{category.description}</p>
          
          <div class="grid sm:grid-cols-2 gap-4 mb-12">
            {category.items.map(item => (
              <div class="p-4 border border-slate-200 rounded-lg hover:border-primary transition-colors bg-white shadow-sm">
                <h3 class="font-bold text-lg text-slate-800">{item.title}</h3>
                <p class="text-sm text-slate-500">{item.spec}</p>
              </div>
            ))}
          </div>
          
          <div class="bg-slate-50 p-6 rounded-xl border border-slate-200">
             <h4 class="font-bold mb-2">Custom Configuration</h4>
             <p class="text-sm text-slate-600">We can configure RAM, CPU, and HDD/SSD to your exact requirements before shipping.</p>
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
          <h3 class="text-2xl font-bold mb-2">Server Inquiry</h3>
          <p class="text-slate-500 mb-6">Let us know your spec requirements.</p>
          <ContactForm />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

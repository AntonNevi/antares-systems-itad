---
import ContactForm from '../../components/ContactForm.astro';
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const category = {
  title: "Professional Workstations",
  description: "Powerhouse desktop workstations for CAD, 3D modeling, video editing, and engineering.",
  items: [
    { title: "Dell Precision Towers", spec: "Xeon processors, ECC RAM" },
    { title: "HP Z-Series Workstations", spec: "Z4/Z6/Z8 configurations" },
    { title: "Lenovo ThinkStation", spec: "P-series professional desktops" },
    { title: "Mobile Workstations", spec: "High-spec 15/17 inch laptops" }
  ]
};
---

<BaseLayout 
  title="Refurbished Workstations - CAD & Rendering" 
  description="Professional grade Dell Precision, HP Z-Series, and Lenovo ThinkStation workstations. Certified for AutoCAD, Premiere Pro, and more."
>
  <Header />
  <main class="py-12">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Products', href: '/products' }, { name: 'Workstations', href: '/products/workstations' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">{category.title}</h1>
          <p class="text-xl text-slate-600 mb-8">{category.description}</p>
          
          <div class="grid sm:grid-cols-2 gap-4 mb-12">
            {category.items.map(item => (
              <div class="p-4 border border-slate-200 rounded-lg hover:border-primary transition-colors bg-white shadow-sm">
                <h3 class="font-bold text-lg text-slate-800">{item.title}</h3>
                <p class="text-sm text-slate-500">{item.spec}</p>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
          <h3 class="text-2xl font-bold mb-2">Quote for Workstations</h3>
          <p class="text-slate-500 mb-6">Need specific GPU or CPU configurations? Let us know.</p>
          <ContactForm />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

---
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEOBreadcrumbs from '../components/SEOBreadcrumbs.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Antares Systems | Secure ITAD" 
  description="Contact our London team for secure data destruction and IT recycling quotes."
>
  <Header />
  <main class="bg-slate-50 py-12">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Contact', href: '/contact' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">Ready to Secure Your Data?</h1>
          <p class="text-xl text-slate-600 mb-12">
            Get a free, no-obligation quotation for your IT asset disposal needs.
          </p>
          
          <div class="space-y-8">
            <div class="bg-white p-6 rounded-xl border border-slate-100 shadow-sm">
              <h3 class="font-bold text-lg mb-4">Contact Methods</h3>
              <div class="space-y-3">
                <p class="flex items-center gap-3">
                  <span class="text-primary font-bold">General:</span> 
                  <a href="mailto:info@antaressystems.net" class="hover:text-primary">info@antaressystems.net</a>
                </p>
                <p class="flex items-center gap-3">
                  <span class="text-primary font-bold">Urgent:</span> 
                  <a href="tel:+447774153420" class="hover:text-primary">+44 7774 153420</a>
                </p>
                <p class="flex items-center gap-3">
                  <span class="text-primary font-bold">Export:</span> 
                  <a href="mailto:contact@antaressystems.net" class="hover:text-primary">contact@antaressystems.net</a>
                </p>
              </div>
            </div>

            <div class="space-y-4 text-sm text-slate-500">
              <p class="flex items-center gap-2"><span class="text-success-eco">✓</span> We respond to all inquiries within 24 hours</p>
              <p class="flex items-center gap-2"><span class="text-success-eco">✓</span> Your data is never shared with third parties</p>
              <p class="flex items-center gap-2"><span class="text-success-eco">✓</span> Free, no-obligation quotations</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white p-8 rounded-2xl shadow-xl border border-slate-100">
          <h3 class="text-2xl font-bold mb-6">Send us a message</h3>
          <!-- Enhanced form fields implemented in ContactForm component -->
          <ContactForm />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

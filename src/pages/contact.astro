---
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEOBreadcrumbs from '../components/SEOBreadcrumbs.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Antares Systems | Secure ITAD Quotes" 
  description="Contact the Antares Systems team in London for secure IT asset disposal, data destruction, and IT recycling quotes. Emergency hotline: +44 20 7123 4567."
>
  <Header />
  <main class="py-12 bg-slate-50">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Contact', href: '/contact' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">Let's Secure Your Data</h1>
          <p class="text-xl text-slate-600 mb-12 leading-relaxed">
            Whether you need a one-off office clearance or a national ongoing ITAD program, our team is ready to assist.
          </p>
          
          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="bg-white p-3 rounded-xl shadow-sm border border-slate-100 text-primary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900">London HQ</h4>
                <p class="text-slate-500">Service area: UK-Wide & London Metropolitan</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="bg-white p-3 rounded-xl shadow-sm border border-slate-100 text-primary">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              </div>
              <div>
                <h4 class="font-bold text-slate-900">Contact Details</h4>
                <p class="text-slate-500">Phone: +44 20 7123 4567</p>
                <p class="text-slate-500">Email: info@antaressystems.net</p>
              </div>
            </div>

            <div class="bg-primary/5 p-6 rounded-2xl border border-primary/10 mt-12">
               <h4 class="text-primary font-bold mb-2">Compliance Assurance</h4>
               <p class="text-sm text-slate-600">All data destruction inquiries are handled by our GDPR-trained secure logistics specialists.</p>
            </div>
          </div>
        </div>
        
        <ContactForm />
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

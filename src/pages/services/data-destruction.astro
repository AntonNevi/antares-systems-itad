---
import Footer from '../../components/Footer.astro';
import Header from '../../components/Header.astro';
import SEOBreadcrumbs from '../../components/SEOBreadcrumbs.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

const timeline = [
  { step: "1", title: "Audit", desc: "Complete asset inventory and data mapping." },
  { step: "2", title: "Secure Collection", desc: "GPS-tracked transport, sealed containers." },
  { step: "3", title: "Certified Wiping", desc: "ShredOS, NIST 800-88 Clear/Purge/Destroy methods." },
  { step: "4", title: "Verification", desc: "100% overwrite confirmation, impossible to recover." },
  { step: "5", title: "Documentation", desc: "Certificate of Data Destruction, audit trail." }
];
---

<BaseLayout 
  title="Certified Data Erasure & Destruction London" 
  description="NIST 800-88 and HMG IS5 compliant data destruction. Secure on-site and off-site services in London."
>
  <Header />
  <main>
    <div class="container mx-auto px-6 py-12">
      <SEOBreadcrumbs items={[{ name: 'Services', href: '/services' }, { name: 'Data Destruction', href: '/services/data-destruction' }]} />
      
      <div class="grid lg:grid-cols-2 gap-16 items-center py-12">
        <div>
          <h1 class="text-5xl font-bold text-slate-900 mb-6">Certified Data Erasure You Can Trust</h1>
          <p class="text-xl text-slate-600 mb-8 leading-relaxed">
            Protecting your corporate intelligence with audited, transparent, and legally compliant data sanitization methods.
          </p>
          
          <div class="bg-slate-50 border-l-4 border-primary p-6 rounded-r-xl mb-8">
            <h3 class="font-bold text-lg mb-2 text-slate-900">Compliance Standards</h3>
            <ul class="space-y-2 text-sm text-slate-700">
              <li><strong>NIST 800-88 Rev 1:</strong> National Institute of Standards and Technology guidelines for media sanitization.</li>
              <li><strong>HMG IS5:</strong> UK Government Infosec Standard 5 â€” baseline and enhanced.</li>
              <li><strong>NCSC Approval:</strong> National Cyber Security Centre recognised methods.</li>
              <li><strong>GDPR Article 17:</strong> Right to erasure compliance.</li>
            </ul>
          </div>
          
          <a href="/contact" class="btn-primary inline-flex items-center gap-2">
            Request Destruction Certificate Sample
          </a>
        </div>
        <div>
          <img src="/F1.jpg" alt="Secure Data Destruction Process" class="rounded-3xl shadow-2xl w-full h-auto object-cover" />
        </div>
      </div>

      <!-- Process Timeline -->
      <section class="py-20 border-t border-slate-100">
        <h2 class="text-3xl font-bold text-center mb-16">Our Secure Process</h2>
        <div class="relative">
          <div class="hidden md:block absolute top-[2.25rem] left-0 w-full h-1 bg-slate-100 -z-10"></div>
          <div class="grid md:grid-cols-5 gap-8">
            {timeline.map((item) => (
              <div class="relative flex flex-col items-center text-center group">
                <div class="w-20 h-20 rounded-full bg-white border-4 border-slate-100 group-hover:border-primary flex items-center justify-center text-2xl font-bold text-slate-400 group-hover:text-primary transition-all mb-6 z-10 shadow-sm">
                  {item.step}
                </div>
                <h3 class="font-bold text-lg mb-2">{item.title}</h3>
                <p class="text-sm text-slate-500 max-w-[150px]">{item.desc}</p>
              </div>
            ))}
          </div>
        </div>
      </section>
    </div>
  </main>
  <Footer />
</BaseLayout>

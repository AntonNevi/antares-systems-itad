---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import SEOBreadcrumbs from '../components/SEOBreadcrumbs.astro';
import ServiceCard from '../components/ServiceCard.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const services = [
  {
    title: "Data Destruction",
    description: "Military-grade data erasure with certificates. NIST 800-88 and HMG IS5 compliant.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`,
    link: "/services/data-destruction"
  },
  {
    title: "IT Recycling",
    description: "Zero landfill guarantee. WEEE compliant, environmental certificates provided.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path></svg>`,
    link: "/services/it-recycling"
  },
  {
    title: "Buyback & Valuation",
    description: "Turn your obsolete equipment into revenue. Fair valuation, free collection, fast payment.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    link: "/services/buyback"
  },
  {
    title: "Export & Remarketing",
    description: "Global distribution of refurbished business-grade hardware to emerging markets.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
    link: "/services/export"
  },
  {
    title: "On-Site Services",
    description: "Secure mobile shredding and data wiping at your premises for maximum security.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path></svg>`,
    link: "/contact"
  },
  {
    title: "Compliance Consulting",
    description: "Expert advice on GDPR, WEEE, and data protection policies for your organization.",
    icon: `<svg fill="none" stroke="currentColor" viewBox="0 0 24 24" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`,
    link: "/compliance"
  }
];
---

<BaseLayout 
  title="ITAD Services London | Antares Systems" 
  description="Complete IT Asset Disposition services for London businesses. From secure destruction to global remarketing."
>
  <Header />
  <main class="py-12 bg-slate-50">
    <div class="container mx-auto px-6">
      <SEOBreadcrumbs items={[{ name: 'Services', href: '/services' }]} />
      
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl font-bold text-slate-900 mb-6">Complete IT Asset Disposition Services</h1>
        <p class="text-xl text-slate-600">
          Complete IT Asset Disposition services for London businesses. From secure destruction to global remarketing.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map(s => <ServiceCard {...s} linkText="Learn More" />)}
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
